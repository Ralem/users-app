@require "~style/vars"
.PaginationDisplay
    position relative
    width 100%
    padding 10px 20px

.PaginationDisplay-control
    display block
    font-size 1.5em
    overflow hidden

    &:hover
        color $Amaranth

    &:disabled
        color inherit

    .Icon
        display block

.PaginationDisplay-current
    @extends $FontBold
    color $Scooter
