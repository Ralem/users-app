7@require "~style/vars"
.UserDisplaySlim
    position relative
    width "calc(%s - 40px)" % ((1 / 6  * 100%))
    border 1px solid transparent
    border-radius 10px
    margin 0 20px 40px
    box-shadow 0px 2px 10px alpha($Black, 0.2), 0 -2px 10px alpha($Black, 0.01)
    transition all 0.15s ease-in-out

    +below(1600px)
        width "calc(%s - 40px)" % ((1 / 5  * 100%))

    +below(1400px)
        width "calc(%s - 40px)" % ((1 / 4  * 100%))

    +below(1100px)
        width "calc(%s - 40px)" % ((1 / 3  * 100%))

    +below(800px)
        width "calc(%s - 40px)" % ((1 / 2  * 100%))

    +below(600px)
        width "calc(%s - 40px)" % ((1 / 1  * 100%))

    &:hover
        border-color $Scooter
        // box-shadow 0px 2px 10px alpha($RadicalRed, 0.2), 0 -2px 10px alpha($RadicalRed, 0.01)

.UserDisplaySlim-container
    display flex
    flex-flow column nowrap
    justify-content center
    align-items center
    padding 40px 20px

.UserDisplaySlim-avatar
    margin-bottom 10px
    box-shadow 1px 2px 3px alpha($Black, 0.2)
    border-color $LightningYellow
    border-width 2px
    transition all 0.15s ease-in-out

    .UserDisplaySlim:hover &
        border-color $Scooter

.UserDisplaySlim-name
    @extend $FontMedium
    color $Amaranth
    text-align center
    transition all 0.15s ease-in-out

    .UserDisplaySlim:hover &
        color $Scooter

.UserDisplaySlim-flag
    display block
    // margin-right 5px
    margin-bottom 5px
