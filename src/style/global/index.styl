@import "buttons"
@import "headings"
@import "inputs"
@import "layout"
@import "links"
@import "texts"
@import "visuals"

html
    background linear-gradient(bottom left, $RadicalRed, $LightningYellow)
    background-position center
    background-size cover

html
body
    font-smoothing antialiased

body
input
textarea
button
    @extends $FontRegular
    font-size $Global.Font.Size
    font-family $Global.Font.Family

.app
    background-color $White
